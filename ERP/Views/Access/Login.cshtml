@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_1.cshtml";
}
<link href="~/Styles/login.css" rel="stylesheet" />
<br />
<br />
<div class="container">
    <div class="card">
        <img id="profile-img" class="profile-img-card" src="~/Resources/logo_hoja.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <form action="~/Access/Login" method="post" autocomplete="off">
            <div class="msg-err">
                @ViewBag.Error
            </div>
            <input type="text" name="Us" class="form-control" placeholder="Usuario" required />
            <br />
            <input type="password" name="Pass" class="form-control" placeholder="Contraseña" required />
            <br />
            <button type="submit" class="btn btn-primary btn-lg btn-block">Ingresar</button>
        </form>
    </div>
</div>