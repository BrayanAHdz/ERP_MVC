@model List<ERP.Models.vEmployee>
@{
    ViewBag.Title = "Employee";
}
<br />
<br />
<div class="container">
    <br />
    <h2><strong>Seguimiento del personal</strong></h2>
    <br />
    <div class="row">
        <div class="card">
            <div id="msgError" class="msg-err">
                @ViewBag.Error
            </div>
            <div id="msgSucc" class="msg-succ ">
                @ViewBag.Success
            </div>
            <h4><strong>Seleccionar empleado</strong></h4>
            <a href="~/Employee/Employee">@ViewBag.Volver</a>
            <form action="~/Employee/Employee" method="post" autocomplete="off" class="form-horizontal">
                <br />
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="text" id="Search" name="Search" class="form-control" placeholder="Nombre, apellido, área o puesto" required />
                    </div>
                    <div class="col-md-offset-2">
                        <button type="submit" class="btn btn-primary btn-lg">Buscar</button>
                    </div>
                </div>
            </form>
            <br />
            <div class="container">
                <table class="table">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Área</th>
                        <th scope="col">Puesto</th>
                        <th scope="col">Sueldo</th>
                        <th scope="col">Días de trabajo</th>
                        <th scope="col">Horas de trabajo</th>
                        <th scope="col">Dar seguimiento</th>
                    </tr>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <th scope="row">@c.id_employee</th>
                            <td>@c.fullname</td>
                            <td>@c.module</td>
                            <td>@c.position</td>
                            <td>@c.pay</td>
                            <td>@c.work_days</td>
                            <td>@c.work_hours</td>
                            <td><button class="btn-primary" type="button" onclick="document.location.href='@Url.Content("~/Employee/StaffTracking/"+c.id_employee)'">Clic</button></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

